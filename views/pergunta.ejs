<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p> <%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder">
            <h3> Responda</h3>
            <label> Resposta:  </label>
            <textarea name='corpo' class="form-control" placeholder="digite sua resposta"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button class="btn btn-primary"> responder </button>
        </form>
        <hr>
        <h3>Repostas</h3>
        <% respostas.forEach(resposta => {%>
           <div class="card">
            <div class="card-body">
                <p> <%= resposta.corpo %> </p><br>
            </div>
           </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs'); %>